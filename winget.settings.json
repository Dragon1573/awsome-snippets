{
    "$schema": "https://aka.ms/winget-settings.schema.json",
    // 相关文档请查阅 https://aka.ms/winget-settings
    "source": {
        // 自动更新延时
        "autoUpdateIntervalInMinutes": 5
    },
    "visual": {
        // 进度条可视化效果
        "progressBar": "rainbow"
    },
    "installBehavior": {
        "requirements": {
            "scope": "machine",
            "architectures": [
                "x64",
                "x86"
            ],
            "locale": [
                "zh-CN",
                "zh-HK",
                "zh-TW",
                "en-US"
            ]
        }
    },
    "network": {
        "downloader": "do",
        "doProgressTimeoutInSeconds": 30
    },
    "experimentalFeatures": {
        "dependencies": true
    }
}
