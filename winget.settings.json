{
    "$schema": "https://aka.ms/winget-settings.schema.json",
    "source": {
        "autoUpdateIntervalInMinutes": 1
    },
    "visual": {
        "progressBar": "rainbow"
    },
    "network": {
        "downloader": "wininet"
    },
    "installBehavior": {
        "preferences": {
            "scope": "machine",
            "locale": [
                "zh-CN",
                "zh-TW",
                "en-US"
            ],
            "architectures": [
                "x64",
                "x86",
                "neutral"
            ]
        }
    },
    "experimentalFeatures": {
        "directMSI": false,
        "dependencies": true
    }
}
